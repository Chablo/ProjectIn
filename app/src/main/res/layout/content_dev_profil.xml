<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.miren.projectin.Dev_profil"
    tools:showIn="@layout/app_bar_dev_profil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/mail"
                android:ems="10"
                android:hint="Nom"
                android:inputType="text"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="25dp" />

            <EditText
                android:id="@+id/prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mail"
                android:layout_alignStart="@+id/telephone"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="Prénom"
                android:inputType="text"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="71dp" />

            <EditText
                android:id="@+id/mdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/prenom"
                android:layout_alignStart="@+id/prenom"
                android:ems="10"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="117dp" />

            <EditText
                android:id="@+id/expertise"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_alignStart="@+id/mail"
                android:layout_centerVertical="true"
                android:ems="10"
                android:hint="Domaine d'expertise"
                android:inputType="textShortMessage"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="163dp" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/expertise"
                android:layout_alignEnd="@+id/button3"
                android:layout_marginBottom="13dp"
                android:ems="10"
                android:hint="Adresse mail"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="265dp" />

            <EditText
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/adresse"
                android:layout_below="@+id/expertise"
                android:ems="10"
                android:hint="Téléphone"
                android:inputType="phone"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="311dp" />

            <EditText
                android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button3"
                android:layout_alignStart="@+id/button3"
                android:layout_marginBottom="31dp"
                android:ems="10"
                android:hint="Adresse"
                android:inputType="textPostalAddress"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="357dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp"
                android:text="Enregistrer"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="425dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
